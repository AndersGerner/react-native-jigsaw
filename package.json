{
  "name": "@draftbit/ui",
  "version": "36.10.0",
  "description": "Jigsaw component library for Draftbit",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "react-native": "lib/module/index.js",
  "files": [
    "src/",
    "lib/"
  ],
  "repository": "git@github.com:draftbit/jigsaw-component-library.git",
  "author": "Draftbit",
  "license": "ISC",
  "private": false,
  "scripts": {
    "clean": "del-cli ./dist",
    "lint": "eslint src",
    "test": "jest",
    "seed:db": "node scripts/collector.js",
    "pretty": "prettier --config ./package.json --write '{example,src}/**/*.{js,css,json}'",
    "prepare": "bob build"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/lib/"
    ],
    "preset": "react-native"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*",
    "react-native": "*"
  },
  "devDependencies": {
    "@react-native-community/bob": "^0.10.1",
    "del-cli": "^2.0.0",
    "glob": "^7.1.4",
    "husky": "^3.0.9",
    "jest": "^24.8.0",
    "lint-staged": "^9.4.2",
    "node-fetch": "^2.6.0",
    "prettier": "1.18.2"
  },
  "dependencies": {
    "@callstack/react-theme-provider": "^3.0.5",
    "@expo/vector-icons": "~10.1.0",
    "color": "^3.1.2",
    "dateformat": "^3.0.3",
    "expo-av": "~8.1.0",
    "expo-blur": "~8.1.0",
    "expo-constants": "~9.0.0",
    "react-native-maps": "0.27.1",
    "react-native-platform-touchable": "^1.1.1",
    "react-native-progress": "^4.1.2",
    "react-native-slider": "^0.11.0",
    "react-native-step-indicator": "^0.0.11",
    "react-native-webview": "9.4.0"
  },
  "prettier": {
    "bracketSpacing": true,
    "singleQuote": false,
    "semi": false,
    "useTabs": false,
    "printWidth": 100,
    "arrowParens": "avoid",
    "trailingComma": "none",
    "jsxBracketSameLine": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module"
    ],
    "files": [
      "src/"
    ]
  }
}
